{% extends 'base.html.twig' %}

{% block title %}Page de
	{{user.fullName}}
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row mb-3 align-items-center">
			<div class="col-3 text-center">
				<img src="{{user.picture}}" class="avatar mb-3" alt="{{user.fullName}}">
				{% if is_granted('ROLE_EMPLOYER') %}
				<br>
				<span class="badge badge-primary rounded">{{user.offers | length}}
					{% if user.offers | length == 0 %}
						offre
					{% else %}
						offres
					{% endif %}
				</span>
				{% endif %}
			</div>
			<div class="col-9">
				<h1>{{user.fullName}}</h1>
				{% if user is same as(app.user) %}
					<div class="mt-3">
						<a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
						<a href="{{ path('account_password') }}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
					</div>
				{% endif %}
			</div>
		</div>
		<div class="col">
			<p>{{user.introduction | raw}}</p>
			<p>{{user.description | raw}}</p>
		</div>
		{% if is_granted('ROLE_EMPLOYER') %}
		<hr>
		<h2>Les offres de {{user.fullName}}</h2>

		{% if user.offers | length > 0 %}
			<div class="row">
				{% for offer in user.offers %}
					{% include 'offer/_offer.html.twig' %}
				{% endfor %}
			</div>
		{% else %}
			<div class="alert alert-warning">
				<p><strong>{{user.fullName}}</strong>n'a pas encore d'offre sur le site !</p>
			</div>
		{% endif %}
		{% endif %}
	</div>
	
{% endblock %}
